{
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspace @abeidahmed/tailwindcss-elements build",
    "build:watch": "yarn workspace @abeidahmed/tailwindcss-elements build:watch",
    "dev": "concurrently \"yarn build:watch\" \"yarn playground\"",
    "lint": "eslint 'packages/**/*.ts'",
    "playground": "yarn workspace @abeidahmed/playground dev",
    "prettier": "prettier --check --log-level warn .",
    "prettier:fix": "prettier --write --log-level warn .",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch"
  },
  "devDependencies": {
    "@ambiki/impulse": "^0.2.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-typescript": "^11.1.5",
